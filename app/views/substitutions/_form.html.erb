<%= form_for(@substitution) do |f| %>
  <% if @substitution.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@substitution.errors.count, "error") %> prohibited this substitution from being saved:</h2>

      <ul>
      <% @substitution.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :replace_what %><br>
    <%= f.text_field :replace_what, :class=>'form-control' %>
  </div>
  <div class="field">
    <%= f.label :replace_with %><br>
    <%= f.text_field :replace_with, :class=>'form-control' %>
  </div>
  <div class="field">
    <%= f.label :substitution_type_id %><br>
    <%= collection_select(:substitution, :substitution_type_id, @substitution_types, :id, :name, {:prompt => false}, {:class=>'form-control'}) %>
  </div>
  <%= f.hidden_field :user_id,  :value => current_user.id %>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
